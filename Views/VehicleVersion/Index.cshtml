@model List<TireSearchMVC.Models.VehicleVersionModel>
@{
    ViewData["Title"] = "Vehicle Versions";
    Layout = "_Layout";
}

<div class="header">
    <h1 class="title">Vehicle Versions</h1>
    <p class="subtitle">Araç versiyonlarını görüntüleyin ve arayın.</p>
</div>

<div class="search-container">
    <form asp-action="Index" asp-controller="VehicleVersion" method="get" class="search-form">
        <div class="search-box">
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Versiyon ara..." class="search-input" />
            <button type="submit" class="search-btn">Ara</button>
        </div>
        <div class="search-stats">
            <span>Toplam: @Model.Count</span>
        </div>
    </form>
</div>

@if (Model.Count == 0)
{
    <div class="empty-state">
        <h3>Kayıt bulunamadı</h3>
    </div>
}
else
{
    <div class="results-grid">
        @foreach (var v in Model)
        {
            <div class="tire-card">
                <h3>@v.Description</h3>
                <div class="tire-info">
                    <span><strong>Version Code:</strong> @v.VersionCode</span>
                    <span><strong>Version ID:</strong> @v.UbyId</span>
                    <span><strong>Model ID:</strong> @v.ModelUbyId</span>
                    @if (v.ModifiedTime != null)
                    {
                        <span><strong>Güncellendi:</strong> @v.ModifiedTime.Value.ToShortDateString()</span>
                    }
                </div>
            </div>
        }
    </div>
}

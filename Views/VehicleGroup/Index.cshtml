@model List<TireSearchMVC.Models.VehicleGroupModel>
@{
    ViewData["Title"] = "Vehicle Groups";
    Layout = "_Layout";
}

<div class="header">
    <h1 class="title">Vehicle Groups</h1>
    <p class="subtitle">Araç gruplarını görüntüleyin ve arayın.</p>
</div>

<div class="search-container">
    <form asp-action="Index" asp-controller="VehicleGroup" method="get" class="search-form">
        <div class="search-box">
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Grup ara..." class="search-input" />
            <button type="submit" class="search-btn">Ara</button>
        </div>
        <div class="search-stats">
            <span>Toplam: @Model.Count</span>
        </div>
    </form>
</div>

@if (Model.Count == 0)
{
    <div class="empty-state">
        <h3>Kayıt bulunamadı</h3>
    </div>
}
else
{
    <div class="results-grid">
        @foreach (var group in Model)
        {
            <div class="tire-card">
                <h3>@group.Description</h3>
                <div class="tire-info">
                    <span><strong>ID:</strong> @group.UbyId</span>
                    @if (group.ModifiedTime != null)
                    {
                        <span><strong>Güncellendi:</strong> @group.ModifiedTime.Value.ToShortDateString()</span>
                    }
                </div>
            </div>
        }
    </div>
}

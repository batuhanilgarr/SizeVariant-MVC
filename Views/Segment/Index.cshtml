@model List<TireSearchMVC.Models.SegmentModel>
@{
    ViewData["Title"] = "Segments";
    Layout = "_Layout";
}

<div class="header">
    <h1 class="title">Segments</h1>
    <p class="subtitle">Lastik segment kodlarını görüntüleyin.</p>
</div>

<div class="search-container">
    <form asp-action="Index" asp-controller="Segment" method="get" class="search-form">
        <div class="search-box">
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Ara..." class="search-input" />
            <button type="submit" class="search-btn">Ara</button>
        </div>
        <div class="search-stats">
            <span>Toplam: @Model.Count</span>
        </div>
    </form>
</div>

@if (Model.Count == 0)
{
    <div class="empty-state">
        <h3>Kayıt bulunamadı</h3>
    </div>
}
else
{
    <div class="results-grid">
        @foreach (var s in Model)
        {
            <div class="tire-card">
                <h3>@(s.Description ?? "-")</h3>
                <div class="tire-info">
                    <span><strong>Code:</strong> @s.Code</span>
                    @if (s.ModifiedTime != null)
                    {
                        <span><strong>Güncellendi:</strong> @s.ModifiedTime.Value.ToShortDateString()</span>
                    }
                </div>
            </div>
        }
    </div>
}
